<UserControl x:Class="PersetionLayerCRM.UC_Reminder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersetionLayerCRM"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="530">
    <Grid Width="530" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="62*"/>

            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Image Cursor="Hand" Source="/image/info.png" Height="35" Width="35"/>
        <Image Source="/image/Reminders.png" Grid.Column="3" Height="35" Width="35"/>
        <TextBlock FontSize="20" x:Name="txtReminderTitle" Text="یادآورنمونه" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#f2f2f2" Margin="0,0,0,0"/>
        <TextBlock FontSize="20" x:Name="txtReminderInfo" Text="جزیات نمونه" Grid.Column="1" Foreground="#f2f2f2"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,70,0"/>
    </Grid>
</UserControl>
